{% extends('__theme.twig') %}
{% block styles %}
    <style>
        div.tox-notifications-container,
        span.tox-statusbar__branding {
            display: none;
        }
    </style>
{% endblock %}
{% block title %}Criar Artigo{% endblock %}
{% block message %}{{ message }}{% endblock %}
{% block body %}
<main class="flex-grow-1 container mb-5">
    <h1 class="mb-3">Publique um Artigo</h1>
    <p class="lead" style="font-weight: normal;">
        <b>Dica:</b> caso não veja a mensagem de sucesso, clique novamente no botão oublicar.
    </p>
    <form action="{{ BASE_URL }}/artigo/novo?post=true" method="POST" enctype="multipart/form-data" class="m-auto col-12 col-lg-10 form-article">
        <div class="mb-3">
            <label for="form-article-title" class="form-label">Título do Artigo</label>
            <input type="text" name="title" placeholder="Título" class="form-control" id="form-article-title">
        </div>
        <div class="mb-3">
            <label for="form-article-subtitle" class="form-label">Subtítulo do Artigo</label>
            <input type="text" name="subtitle" placeholder="Subtítulo" class="form-control" id="form-article-subtitle">
        </div>
        <div class="mb-3">
            <label for="form-article-cover" class="form-label">Selecione uma Image de Capa</label>
            <input type="file" name="cover" accept="image/png, image/jpg, image/jpeg, image/gif, image/svg" class="form-control" id="form-article-cover">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Escreva o Seu Artigo</label>
            <textarea name="text" placeholder="Texto do seu artigo..." class="form-control" id="article-text"></textarea>
        </div>
        <p class="progress-test"></p>
        <div class="progress mb-3">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="height: 20px" id="progress-bar-article"></div>
        </div>
        <button class="btn btn-outline-primary w-100" type="submit">Publicar</button>
    </form>
    <div id="article-text-content"></div>
</main>
{% endblock %}
{% block scripts %}
<script src="{{ BASE_URL }}/assets/scripts/tinymce.min.js" referrerpolicy="origin"></script>
<script src="{{ BASE_URL }}/assets/scripts/new-article.js"></script>
{% endblock %}
